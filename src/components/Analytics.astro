---
const provider = (import.meta.env.ANALYTICS_PROVIDER || '').toLowerCase();
const plausibleDomain = import.meta.env.PLAUSIBLE_DOMAIN;
const gaMeasurementId = import.meta.env.GA_MEASUREMENT_ID;
---

{provider === 'plausible' && plausibleDomain && (
  <script
    defer
    data-domain={plausibleDomain}
    src="https://plausible.io/js/script.js"
  ></script>
)}

{provider === 'ga4' && gaMeasurementId && (
  <>
    <script
      async
      src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}
    ></script>
    <script>
      {`window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','${gaMeasurementId}');`}
    </script>
  </>
)}
